{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "allowJs" : true,
    "lib" : ["dom","es7"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "../extensions",
    "types": [
      "./@types"
    ]
  }
}