    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": [
      "../@types/node",
      "../@types/creator"
    ]
  }
}