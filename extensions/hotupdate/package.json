{
    "package_version": 2,
    "version": "1.0.0",
    "name": "hotupdate",
    "description": "热更新版本文件生成工具",
    "main": "./dist/main.js",
    "dependencies": {
        "vue": "^3.1.4",
        "fs-extra": "^10.0.0",
        "jszip": "^3.2.2"
    },
    "devDependencies": {
        "@types/node": "^16.0.1",
        "@types/fs-extra": "^9.0.5",
        "typescript": "^4.3.4"
    },
    "panels": {
        "default": {
            "title": "热更新工具",
            "type": "dockable",
            "main": "dist/panels/default/script",
            "size": {
                "min-width": 900,
                "min-height": 900,
                "width": 500,
                "height": 500
            }
        }
    },
    "contributions": {
        "menu": [
            {
                "path": "项目工具",
                "label": "热更新",
                "message": "showPanel"
            }
        ],
        "messages": {
            "showPanel": {
                "methods": [
                    "showPanel"
                ]
            },
            "onAfterBuild":{
                "methods": [
                    "onAfterBuild"
                ]
            }
        },
        "builder":"./dist/Builder.js"
    },
    "author": "Zheng Fasheng",
    "editor": ">=3.3.1",
    "scripts": {
        "build": "tsc -b",
        "watch": "tsc -w"
    }
}
